  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/test.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run unit tests",
      "cwd": "${workspaceFolder}/codeKatas",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "env": {
        "NODE_ENV": "test"
      },
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceRoot}/codeKatas/tests/chainAdding/*js"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "console": "internalConsole",
      "outputCapture": "std"
    }
  ]
}
